extends ../layout 
block content 
    .container 
        if errors 
            ul.list-unstyled.mt-4
                each error in errors 
                    li.alert.alert-danger.m-2 #{error}
        .row 
            .col-sm-2
            .col-sm-8
                h1.mt-4.mb-4=title
                form(action="/users/login", method="post" class="authForm2") 
                    .form-group 
                        label(for="username") Username: 
                        input(type="text" name="username" id="username" class="form-control" value=(undefined === login ? '' : login.email) required)
                    .form-group 
                        label(for="password") Password: 
                        input(type="password" name="password" id="password" class="form-control" value=(undefined === login ? '' : login.password)  required)
                    input(type="submit" class="btn btn-primary" value="login")
                    p.mt-4 You don't have account ? 
                        a(href="/users/register") Register 
            .col-sm-2
             
             