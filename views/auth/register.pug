extends ../layout 
block content 
    .container 
        if errors 
            ul.list-unstyled.mt-4
                each error in errors 
                    li.alert.alert-danger.m-2 #{error}
        .row 
            .col-sm-2
            .col-sm-8
                h1.mt-4.mb-4=title
                form(action="", method="post" class="authForm") 
                    .form-group 
                        label(for="username") Username: 
                        input(type="text" name="username" id="name" class="form-control" value=(undefined === register ? '' : register.username) required)
                    .form-group 
                        label(for="email") Email: 
                        input(type="email" name="email" id="email" class="form-control" value=(undefined === register ? '' : register.email) required )
                    .form-group 
                        label(for="password") Password: 
                        input(type="password" name="password" id="password" class="form-control" value=(undefined === register ? '' : register.password) required )
                    .form-group 
                        label(for="confirm-password") Confirm password: 
                        input(type="password" name="password_confirm" id="password" class="form-control" value=(undefined === register ? '' : register.password) required)
                    input(type="submit" class="btn btn-primary" value="register")
                    p.mt-4 Do you have account ? 
                        a(href="/users/login") login
            .col-sm-2
             
             