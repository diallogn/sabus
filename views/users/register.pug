extends ../layout 
block content 
    .container 
        if errors 
            ul.list-unstyled.mt-4
                each error in errors 
                    li.alert.alert-danger.m-2 #{error}
        .row 
            .col-sm-2
            .col-sm-8
                h1.mt-4.mb-4=title
                form(action="", method="post" class="authForm") 
                    .form-group 
                        input(type="text" name="username" id="name" class="form-control" value=(undefined === register ? '' : register.username) required placeholder="username")
                    .form-group 
                        input(type="email" name="email" id="email" class="form-control" value=(undefined === register ? '' : register.email) required placeholder="email")
                    .form-group 
                        input(type="password" name="password" id="password" class="form-control" value=(undefined === register ? '' : register.password) required placeholder="password")
                    .form-group 
                        input(type="password" name="password_confirm" id="password" class="form-control" value=(undefined === register ? '' : register.password) required placeholder="confirm password")
                    input(type="submit" class="btn btn-primary" value="register")
            .col-sm-2
             
             