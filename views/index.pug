extends layout 

block content 
    div(class="banner d-flex align-items-center")
        .container
            .row 
                div(class="col-sm-6")
                    h5 
                        span.sabus Sabu's Shop 
                    p Le magasin d'électronique le plus proche de vous. 
                div(class="col-sm-3")
                div(class="col-sm-3")
                    img(src="/images/products/electro/no-prd.png", height="200" alt="")
    .container
        h5(class="mt-4")=title1
        #products 
            each product in electros
                div(class="card mt-4")
                    .card-img
                        img(src=product.image_url, title="Produits-"+product.reference, height="145px", width="145px")
                    .card-title
                        h5(class="card-title") #{product.name}
                    a(href=product.url+'/details' class="card-detail") Détails 

        h5(class="mt-4")=title2
        #products 
            each product in phones
                div(class="card mt-4")
                    .card-img
                        img(src=product.image_url, title="Produits-"+product.reference, height="145px", width="145px")
                    .card-title
                        h5(class="card-title") #{product.name}
                    a(href=product.url+'/details' class="card-detail") Détails 
            